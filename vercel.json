{
    "version": 2,
    "builds": [
      {
        "src": "next.config.js",
        "use": "@vercel/next"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/$1"
      }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/old-route",
        "destination": "/new-route"
      }
    ],
    "redirects": [
      {
        "source": "/legacy-path",
        "destination": "/modern-path",
        "permanent": true
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "cache": {
      "files": [
        "**/*.js",
        "**/*.css",
        "**/*.woff2"
      ]
    }
  }
  